// Import the Scanner class from the java.util package.
// Scanner imatilora kusunga nambala yomwe yalowesedwa.
import java.util.Scanner;

public class AverageCalculator {
    // program imayimbira kugwira ntchito pamenepa.
    public static void main(String[] args) {
        // Create a Scanner object named 'scanner' kuti izisunga data (the keyboard).
        Scanner scanner = new Scanner(System.in);

        // kumuuza munthu alowese manambala.
        System.out.println("Enter four numbers:");

        // kusunga nambala yoyamba yomwe yalowesedwa.
        double num1 = scanner.nextDouble();

        // kusunga nambala yachiwiri yomwe yalowesedwa.
        double num2 = scanner.nextDouble();

        // kusunga nambala yachitatu yomwe yalowesedwa.
        double num3 = scanner.nextDouble();

        // kusunga nambala yachinayi yomwe yalowesedwa
        double num4 = scanner.nextDouble();

        // kuonkhetsa average of the four numbers.
        // Formula: (sum of all numbers) / (number of values).
        double average = (num1 + num2 + num3 + num4) / 4;

        // kuonetsa ma results.
        System.out.println("The average of the four numbers is: " + average);

        // Close the Scanner.
        scanner.close();
    }
}
